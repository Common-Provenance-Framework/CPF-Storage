# Updates organization's certificates

@organization_id=myorg_1


PUT http://{{$dotenv TRUSTED_PARTY_HOST}}:{{$dotenv TRUSTED_PARTY_PORT}}/api/v1/organizations/{{organization_id}}/certs HTTP/1.1
Accept: application/json
Content-Type: application/json

{
  "clientCertificate": "{{$dotenv CLIENT_CERT}}",
  "intermediateCertificates": [
    "{{$dotenv INTERMEDIATE_CERT_1}}",
    "{{$dotenv INTERMEDIATE_CERT_2}}"
    ]
}